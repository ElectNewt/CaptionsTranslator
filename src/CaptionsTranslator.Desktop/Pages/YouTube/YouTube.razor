@page "/youtube"

<h3>Load Youtube video (title and description)</h3>
<div class="row">
	<div class="input-group mb-3">
		<input type="text" @bind="VideoId" class="form-control" placeholder="YouTube video Id" aria-label="YouTube video Id" aria-describedby="ytvideoIdbtn">
		<button class="btn btn-outline-primary" type="button" id="ytvideoIdbtn" @onclick="LoadYouTubeVideoInformation">Load VideoId Information</button>
	</div>
</div>

<div class="row @VideoBoxVisibility">
	<div class="col-12 @LoadingVisibility">
		Loading...
	</div>
	<div class="col-12 @TranslationVisibility">
		<div class="row mb-2">
			<div class="col-6"></div>
			<div class="col-6">
				<div class="input-group">
					<select class="form-select form-control" @bind="_appState.OpenAiSettings.Model" aria-describedby="translateBtn">
						<option value="3.5turbo">GPT-3.5 Turbo</option>
						<option value="4">GPT-4</option>
					</select>
					<button class="btn btn-outline-primary" type="button" id="translateBtn" @onclick="TranslateTitleAndDescription">Translate into English</button>
				</div>
			</div>
		</div>
	</div>
	<div class="row">
		<div class="col-6  @ContentVisibility ">
			<div class="row">
				<div class="col-sm-12 mb-1">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Original Title</h5>
							<p class="card-text">@TitleContent</p>
						</div>
					</div>
				</div>
				<div class="col-sm-12 mb-1">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Original Description</h5>
							<p class="card-text">
								@DescriptionContent
							</p>
						</div>
					</div>
				</div>
			</div>
		</div>
		<div class="col-6 @TranslationVisibility">
			<div class="col-12 @LoadingTranslationVisibility">
				Loading...
			</div>
			<div class="row @TranslationContentVisibility">
				<div class="col-sm-12 mb-1">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Translated Title</h5>
							<p class="card-text">@TranslatedTitle</p>
						</div>
					</div>
				</div>
				<div class="col-sm-12 mb-1">
					<div class="card">
						<div class="card-body">
							<h5 class="card-title">Translated Description</h5>
							<p class="card-text">
								@TranslatedDescription
							</p>
						</div>
					</div>
				</div>
				<div class="col-12 mb-1">
					<button class="btn btn-primary" @onclick="UploadToYouTube">Upload to youtube as English</button> @UploadedVideoText
				</div>
			</div>
		</div>
	</div>
</div>
